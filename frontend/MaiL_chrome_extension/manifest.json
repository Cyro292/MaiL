{
    "manifest_version": 3,
    "name": "Email Suggestion Extension",
    "version": "1.0",
    "description": "Get email composition suggestions.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
      
    },

    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]    
    
  }
  