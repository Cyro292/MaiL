{
    "manifest_version": 3,
    "name": "Email Suggestion Extension",
    "version": "1.0",
    "description": "Get email composition suggestions.",
    "permissions": ["activeTab", "scripting", "storage", "tabs"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://mail.google.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    }
    
}
  